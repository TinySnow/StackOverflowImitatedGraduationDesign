<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tinysnow.system.mapper.PostMapper">
    <resultMap id="base" type="com.tinysnow.system.model.Post">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="author" column="author" jdbcType="VARCHAR"/><!-- 作者，关联 user 的 id -->
        <result property="title" column="title" jdbcType="LONGVARCHAR"/><!-- 文章标题 -->
        <result property="content" column="content" jdbcType="LONGVARCHAR"/><!-- 文章内容 -->
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/><!-- 创建时间 -->
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/><!-- 更新时间，若无更改可为空 -->
    </resultMap>

    <select id="find" resultMap="base">
        select *
        from post
        where id = #{id}
    </select>

    <select id="findList" resultMap="base">
        select *
        from post
        where id = #{id}
    </select>

    <insert id="save" parameterType="com.tinysnow.system.model.Post">
        insert into post (id, author, title, content, created_time, updated_time)
        values (#{id}, #{author}, #{title}, #{content}, #{created_time}, #{updated_time})
    </insert>

    <update id="update" parameterType="com.tinysnow.system.model.Post">
        update post
        set where id = #{id}
    </update>

    <delete id="delete">
        delete
        from post
        where id = #{id}
    </delete>
</mapper>